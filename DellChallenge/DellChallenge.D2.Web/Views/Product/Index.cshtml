@model IEnumerable<DellChallenge.D2.Web.Models.ProductModel>

@{
    ViewData["Title"] = "View";
}
<h4>All Products</h4>
<hr />

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-4">
            @item.Name - @item.Category
        </div>
        <div class="col-md-5">
            @Html.ActionLink("Edit", "Update", new { id = item.Id })
            |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </div>
    </div>
}